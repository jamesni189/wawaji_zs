<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/charge_record_linear"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/iv_recharge_item_type"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_price" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_recharge_record_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/common_text_size_normal" />
            <TextView
                android:id="@+id/tv_recharge_record_item_time"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_6"
                android:textSize="@dimen/common_text_size_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_recharge_record_item_price"
            android:layout_marginRight="15dp"
             android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_black"
            android:textSize="@dimen/common_text_size_normal" />
    </LinearLayout>
    <View
        android:layout_below="@+id/charge_record_linear"
        android:id="@+id/divider_recharge_record_item"
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />
</RelativeLayout>