<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ydd.pockettoycatcherrwz.ui.home.MainActivityNew">
    
    
    <FrameLayout
        android:id="@+id/frame_index"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/app_login_title_color"
        android:layout_height="60dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="首页"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableTop="@drawable/selector_home"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_box"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="娃娃盒"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableTop="@drawable/selector_wawabox"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="商城"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableTop="@drawable/selector_shop"
            android:textColor="@color/white"
            android:layout_height="match_parent"  />
        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="我的"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableTop="@drawable/selector_mine"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
