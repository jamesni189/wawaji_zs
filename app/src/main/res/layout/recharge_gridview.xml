<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rechager_gold_back"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/commer_background_blue"
        android:orientation="vertical">
        <!--
        android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"-->
        <LinearLayout
            android:id="@+id/recharge_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_recharge_item_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_price" />

            <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
                android:id="@+id/tv_recharge_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_recharge_item_icon"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recharge_kinds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:visibility="gone">

            <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
                android:layout_marginTop="8dp"
                android:id="@+id/recharge_kinds_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_normal" />
        </LinearLayout>


            <TextView
                android:id="@+id/recharge_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal">

            <TextView
                android:id="@+id/recharge_money"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/shape_home_border"
                android:gravity="center"
                android:textColor="@color/app_login_title_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rechange_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@mipmap/recharge_text_back"
        android:gravity="center"
        android:textColor="@color/common_text_white"
        android:textSize="11sp"
        android:visibility="gone" />


</FrameLayout>