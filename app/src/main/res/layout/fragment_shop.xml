<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ydd.pockettoycatcherrwz.ui.fragment.ShopFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/app_login_title_color">
        <ImageView
            android:id="@+id/title_back"
            android:src="@mipmap/ic_title_back"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/wb_title"
            android:textSize="16sp"
            android:text="商城"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wb_right_title"
            android:textSize="14sp"
            android:text="兑换记录"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
           android:layout_alignParentRight="true"
           android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/app_login_title_color">


        <TextView
            android:id="@+id/btn_manito"
            android:text="碎片商城"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/btn_richer"
            android:text="积分商城"
            android:textColor="@color/common_text_gray"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
  <com.github.lzyzsd.jsbridge.BridgeWebView
      android:id="@+id/bwView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></com.github.lzyzsd.jsbridge.BridgeWebView>

</LinearLayout>
