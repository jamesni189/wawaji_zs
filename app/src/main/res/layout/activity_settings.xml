<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_white"
    android:orientation="vertical">

    <com.ydd.pockettoycatcherrwz.widget.CommonTitleBar
        android:id="@+id/common_title_bar"
        style="@style/common_title_bar" />


    <View
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="推送通知" />

        <com.ydd.pockettoycatcherrwz.view.ToggleButton
            android:id="@+id/cb_settings_push_1"
            app:tbOnColor="@color/app_login_title_color"
            android:layout_width="54dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="背景音乐" />

        <com.ydd.pockettoycatcherrwz.view.ToggleButton
            android:id="@+id/cb_settings_music_1"
            app:tbOnColor="@color/app_login_title_color"
            android:layout_width="54dp"
            android:layout_height="30dp" />
    </LinearLayout>


    <View
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="背景音效" />

        <com.ydd.pockettoycatcherrwz.view.ToggleButton
            android:id="@+id/cb_settings_music_2"
            android:layout_width="54dp"
            app:tbOnColor="@color/app_login_title_color"
            android:layout_height="30dp" />
    </LinearLayout>

    <View style="@style/common_space_divider_gray" />

    <LinearLayout
        android:id="@+id/ln_settings_clear_cache"
        style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="清理缓存" />

        <TextView
            android:id="@+id/tv_settings_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/common_text_size_normal" />

        <ImageView style="@style/common_item_right_arrow" />
    </LinearLayout>

    <View
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout
        android:id="@+id/ln_settings_about_us"
        style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="关于我们" />

        <ImageView style="@style/common_item_right_arrow" />
    </LinearLayout>

    <View
        android:visibility="gone"
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout
        android:visibility="gone"
        style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="帮助中心" />

        <ImageView style="@style/common_item_right_arrow" />
    </LinearLayout>

    <View
        style="@style/common_divider_horizontal_gray"
        android:layout_marginLeft="@dimen/common_horizontal_padding_normal" />

    <LinearLayout
        android:visibility="gone"
        style="@style/common_item_layout">

        <TextView
            style="@style/common_item_left_tv"
            android:text="意见反馈" />

        <ImageView style="@style/common_item_right_arrow" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_gray">

        <Button
            android:layout_marginBottom="20dp"
            android:textColor="@color/common_text_black"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_settings_logout"
            android:background="@color/common_text_white"
            android:text="退出登录" />
    </RelativeLayout>

</LinearLayout>