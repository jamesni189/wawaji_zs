<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ydd.pockettoycatcherrwz.ui.fragment.MonthVipFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text=""
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_vip_title"
            android:text="周卡会员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vip_end_time"
                android:text="2013-12-12到期,"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_vip_add_money"
                android:text="立即续费"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_get_tip1"
                android:text="已领取专属奖励"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_get_tip2"
                android:text="每日可领取"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_geted_money"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/ic_price"
                android:layout_below="@+id/tv_get_tip1"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_today_money"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/ic_price"
                android:layout_below="@+id/tv_get_tip1"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_get_jiangli"
                android:text="查看奖励明细>"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_get_"
                android:text="立即领取"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
