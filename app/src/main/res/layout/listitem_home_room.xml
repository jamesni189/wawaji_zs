<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/common_vertical_padding_normal"
              android:paddingRight="@dimen/common_vertical_padding_normal"
              android:paddingTop="5dp">

    <com.ydd.pockettoycatcherrwz.ui.home.RoomItemView
        android:id="@+id/room_item_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"/>

    <com.ydd.pockettoycatcherrwz.ui.home.RoomItemView
        android:id="@+id/room_item_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"/>

</LinearLayout>