<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_gray"
              android:orientation="vertical">

    <com.ydd.pockettoycatcherrwz.widget.CommonTitleBar
        android:id="@+id/common_title_bar"
        style="@style/common_title_bar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/recharge_linear_addview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/adressdawable"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ln_recharge_confirm_zfb"
            style="@style/common_item_layout1"

            android:clickable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_logo_zfb"/>

            <TextView
                style="@style/common_item_left_tv"
                android:layout_marginLeft="10dp"
                android:text="支付宝支付"
                android:textColor="#333333"/>

            <CheckBox
                android:id="@+id/cb_recharge_confirm_zfb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_login_checkbox"
                android:button="@null"
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_white"
            android:paddingLeft="@dimen/common_horizontal_padding_normal">

            <View
                style="@style/common_divider_horizontal_gray"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ln_recharge_confirm_wx"
            style="@style/common_item_layout1"
            android:clickable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_logo_wx"/>

            <TextView
                style="@style/common_item_left_tv"
                android:layout_marginLeft="10dp"
                android:text="微信支付"
                android:textColor="#333333"/>

            <CheckBox
                android:id="@+id/cb_recharge_confirm_wx"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_login_checkbox"
                android:button="@null"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/common_item_left_messgae"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:id="@+id/cb_login_protocol_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/common_check_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我已经阅读并同意遵守"
            android:textColor="@color/common_text_black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_login_protocol_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="会员卡购买规则"
            android:textColor="@color/app_common_color"
            android:textSize="13sp"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/common_bg_gray">

        <Button
            android:id="@+id/btn_recharge_confirm"
            android:textColor="@color/black"
            android:background="@drawable/shape_home_border"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="确认充值"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>