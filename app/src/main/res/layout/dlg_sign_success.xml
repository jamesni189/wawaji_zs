<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/who_where_show_1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/pic_sunshine_price"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/who_where_show_2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/user_sign_takes_points"/>
        <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
            android:id="@+id/tv_dlg_sign_success_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/common_text_white"
            android:textSize="@dimen/common_text_size_large"/>

        <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
            android:id="@+id/btn_dlg_sign_success_confirm"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/bg_red_btn"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/common_text_white"
            android:textSize="@dimen/common_text_size_large"/>
    </RelativeLayout>

</LinearLayout>