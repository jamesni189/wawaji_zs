<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

    <ImageView
        android:id="@+id/iv_dlg_personal_settings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.ydd.pockettoycatcherrwz.widget.RoundedCPImageView
                android:id="@+id/iv_dlg_personal_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                app:frame_oval="true"
                android:src="@mipmap/pic_zww_default"/>

            <TextView
                android:id="@+id/tv_dlg_personal_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:hint="暂无昵称"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/common_text_size_large"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_dlg_personal_charge_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_gray_stroke"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_price"/>

                    <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
                        android:id="@+id/tv_dlg_personal_charge_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/common_text_black"
                        android:textSize="@dimen/common_text_size_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_dlg_personal_charge_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_gray_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_point"/>

                    <com.ydd.pockettoycatcherrwz.widget.StrokeTextView
                        android:id="@+id/tv_dlg_personal_charge_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:textColor="@color/common_text_black"
                        android:textSize="@dimen/common_text_size_normal"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="钻石充值"
                    android:textColor="@color/common_text_gray"
                    android:textSize="@dimen/common_text_size_smallest"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="积分商城(即将开放)"
                    android:textColor="@color/common_text_gray"
                    android:textSize="@dimen/common_text_size_smallest"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <LinearLayout
                style="@style/ln_dlg_personal_bottom">

                <ImageView
                    android:id="@+id/iv_dlg_personal_grab_records"
                    style="@style/iv_dlg_personal_bottom"
                    android:src="@mipmap/ic_grab_records"/>

                <TextView
                    style="@style/tv_dlg_personal_bottom"
                    android:text="抓取记录"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ln_dlg_personal_bottom">

                <ImageView
                    android:id="@+id/iv_dlg_personal_charge_records"
                    style="@style/iv_dlg_personal_bottom"
                    android:src="@mipmap/ic_charge_records"/>

                <TextView
                    style="@style/tv_dlg_personal_bottom"
                    android:text="充值记录"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ln_dlg_personal_bottom">

                <ImageView
                    android:id="@+id/iv_dlg_personal_invite"
                    style="@style/iv_dlg_personal_bottom"
                    android:src="@mipmap/ic_invite"/>

                <TextView
                    style="@style/tv_dlg_personal_bottom"
                    android:text="邀请朋友"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>