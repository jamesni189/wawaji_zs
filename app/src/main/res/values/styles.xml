<resources>

    <style name="rp_custom_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@mipmap/ic_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--通用水平分割线-->
    <style name="common_divider_horizontal_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--通用水平分割线-->
    <style name="common_divider_horizontal_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/common_bg_gray</item>
    </style>

    <!--通用标题栏-->
    <style name="common_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_title_height</item>
    </style>

    <!-- 自定义dialog -->
    <style name="popup_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 自定义dialog，暂用于底部弹窗 -->
    <style name="bottom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="common_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_item_height</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding_normal</item>
        <item name="android:paddingRight">@dimen/common_horizontal_padding_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/common_bg_white</item>
    </style>

    <style name="common_item_left_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/common_text_size_normal</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <style name="common_item_right_arrow_2">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/arrow_user_mian</item>
    </style>
    <style name="common_item_right_arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_arrow_right</item>
    </style>





    <!--通用底部按钮-->
    <style name="common_bottom_btn">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_padding</item>
        <item name="android:layout_marginRight">@dimen/common_margin_padding</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_text_size_normal</item>
        <item name="android:textColor">@color/common_text_white</item>
        <item name="android:background">@mipmap/bg_login_tel_btn</item>
    </style>

    <!--通用灰色分割区域-->
    <style name="common_space_divider_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_divider_space_height</item>
        <item name="android:background">@color/common_bg_gray</item>
    </style>

    <!--通用layout间隔-->
    <style name="common_padding_layout">
        <item name="android:paddingLeft">@dimen/common_horizontal_padding_normal</item>
        <item name="android:paddingRight">@dimen/common_horizontal_padding_normal</item>
        <item name="android:paddingTop">@dimen/common_vertical_padding_normal</item>
        <item name="android:paddingBottom">@dimen/common_vertical_padding_normal</item>
    </style>

    <!--通用白色背景layout -->
    <style name="common_white_padding_layout" parent="@style/common_padding_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/common_bg_white</item>
    </style>

    <!--通用白色背景layout -->
    <style name="common_black_normal_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_text_size_normal</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>

    <!--申诉对话框textview-->
    <style name="appeal_dlg_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_text_blue</item>
        <item name="android:textSize">@dimen/common_text_size_large</item>
        <item name="android:padding">@dimen/common_vertical_padding_normal</item>
    </style>

    <style name="inputdialog">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_text_blue</item>
        <item name="android:textSize">@dimen/common_text_size_large</item>
        <item name="android:padding">@dimen/common_vertical_padding_normal</item>
    </style>

    <style name="ln_dlg_personal_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="iv_dlg_personal_bottom">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="tv_dlg_personal_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/common_text_3</item>
        <item name="android:textSize">@dimen/common_text_size_small</item>
    </style>

    <!-- 自定义alert dialog -->
    <style name="common_alert_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="common_item_layout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_item_height</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding_normal</item>
        <item name="android:paddingRight">@dimen/common_horizontal_padding_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- dialog -->
    <style name="common_dialog_btn">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/common_text_size_normal</item>
        <item name="android:textColor">@color/common_text_3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pagertab_style">
        <item name="android:textSize">13sp</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabDrawMode">text</item>
    </style>

    <style name="pagertab_style_1">
        <item name="android:background">#D79289</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#DCFF40</item>
        <item name="apTabIndicatorColor">#F7C778</item>
        <item name="apTabUnderlineColor">#00000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <!--<item name="apTabPaddingLeftRight">8dp</item>-->
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">#000000</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>  //Dialog的windowFrame框为无-->
        <item name="android:windowIsFloating">true</item>  //是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item> //是否半透明
        <item name="android:windowNoTitle">true</item>  //是否显示title
        <item name="android:textColor">@android:color/black</item>  //设置dialog的背景
        <item name="android:color">@android:color/black</item>  //设置dialog的背景
        <item name="android:background">@android:color/white</item>  //设置dialog的背景
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.3</item>  //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
